<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:background="@color/purple_200"
    app:cardBackgroundColor="#D5CEA3"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_display_username"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="sample"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_display_user_phone"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_display_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="123456789"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_display_user_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_display_user_phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:gravity="start"
            android:paddingLeft="45dp"
            android:paddingTop="10dp"
            android:text="sample"
            android:textSize="17sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>